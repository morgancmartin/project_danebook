<div class="panel panel-default"><!-- begin-post-panel -->
  <div class="panel-body">
    <div class="col-xs-8 post-header">
      <img class="col-xs-3" src='<%= asset_path('hp.jpg') %>'>
      <%= link_to user.profile.name, user_path(user), class: 'col-xs-8' %>
      <%= content_tag(:p, post.created_at, class: 'col-xs-9 grey') %>
    </div>
    <%= content_tag(:p, post.post_text, class: 'col-xs-12') %>
  </div>
  <div class="panel-footer">
    <div class="row">
      <% unless post.likes.map(&:user).include?(current_user) %>
        <%= link_to 'Like', post_likes_path(post), method: :post, class: 'col-xs-1 underline' %>
      <% else %>
        <%= link_to 'Unlike', like_path(post.likes.where("user_id=#{current_user.id}").first), method: :delete, class: 'col-xs-1 underline' %>
      <% end %>
      <a class="col-xs-1 underline" href="#">Comment</a>
      <%= link_to 'Delete', post_path(post), method: :delete, class: 'col-xs-1 col-xs-offset-8 underline' if post.user == current_user %>
      <%= content_tag(:p, construct_like_sentence(post.likes), class: 'col-xs-8 top-margin-10') if post.likes.any? %>
    </div>
    <div class="row">
      <%= form_for Comment.new, url: post_comments_path(post) do |comment_fields| %>
        <%= comment_fields.text_area :comment_text,  placeholder: 'Write a comment...', rows: 5, class: 'post-control col-xs-10 col-xs-offset-1' %>
        <%= comment_fields.submit 'Comment', class: 'btn btn-primary col-xs-2 col-xs-offset-9 top-margin-10' %>
      <% end %>
    </div>
  </div>
</div><!-- end-post-panel -->
